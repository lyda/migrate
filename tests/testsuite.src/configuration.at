AT_SETUP([runtime configuration])
AT_KEYWORDS([configuration misc])

# check if --runtime-env exits without error
# don't compare stdout
AT_CHECK([$COBCRUN --runtime-env], [0], ignore, [])

# check if --runtime-env points to a file called "runtime_empty.cfg"
# use tr to remove newlines and spaces as the path likely is splitted
# into two lines
AT_CHECK([$COBCRUN --runtime-env | tr -d '\n ' | \
grep "runtime_empty.cfg"], [0], ignore, [])
AT_CHECK([export COB_RUNTIME_CONFIG=""; $COBCRUN --runtime-env | tr -d '\n ' \
| grep "runtime.cfg"],
[0], ignore, [])

AT_CLEANUP


AT_SETUP([runtime configuration file])
AT_KEYWORDS([configuration misc])

AT_DATA([test.cfg], [
include "test2.cfg"
])

AT_DATA([test2.cfg], [
physical_cancel true
])

AT_DATA([test3.cfg], [
setenv COB_PHYSICAL_CANCEL=true
])


# check if default for physical cancel is still false
AT_CHECK([$COBCRUN --runtime-env |
grep "COB_PHYSICAL_CANCEL" | grep "false" | grep "default"], [0], ignore, [])

# check if override via -c works and if include works
AT_CHECK([$COBCRUN -c test2.cfg --runtime-env | \
grep "physical_cancel" | grep "true"], [0], ignore, [])
AT_CHECK([$COBCRUN -c test.cfg --runtime-env | \
grep "physical_cancel" | grep "true"], [0], ignore, [])
AT_CHECK([$COBCRUN -c test3.cfg --runtime-env | \
grep "COB_PHYSICAL_CANCEL" | grep "true"], [0], ignore, [])

# check if configuration file loading with full path works
AT_CHECK([$COBCRUN -c "$(_return_path "$(pwd)/test.cfg")" --runtime-env],
[0], ignore, [])

AT_CLEANUP


