/* CB_WARNDEF (var, name, doc) */

/* Always active, start doc with do not warn...  */
/* CB_ONWARNDEF (var, name, doc) */

/* Do not include warning with -Wall */
/* CB_NOWARNDEF (var, name, doc) */

CB_ONWARNDEF (cb_warn_unfinished, "unfinished",
	    _("do not warn if unfinished features are used"))

CB_ONWARNDEF (cb_warn_pending, "pending",
	    _("do not warn if pending features are mentioned"))

CB_WARNDEF (cb_warn_obsolete, "obsolete",
	    _("warn if obsolete features are used"))

CB_WARNDEF (cb_warn_archaic, "archaic",
	    _("warn if archaic features are used"))

CB_WARNDEF (cb_warn_redefinition, "redefinition",
	    _("warn incompatible redefinition of data items"))

CB_WARNDEF (cb_warn_truncate, "truncate",
	    _("warn field truncation from constant assignments"))

CB_NOWARNDEF (cb_warn_pos_truncate, "possible-truncate",
	    _("warn possible field truncation"))

CB_WARNDEF (cb_warn_overlap, "overlap",
	    _("warn overlapping MOVE items"))

CB_NOWARNDEF (cb_warn_pos_overlap, "possible-overlap",
	    _("warn MOVE items that may overlap depending on variables"))

CB_WARNDEF (cb_warn_parentheses, "parentheses",
	    _("warn lack of parentheses around AND within OR"))

CB_WARNDEF (cb_warn_strict_typing, "strict-typing",
	    _("warn type mismatch strictly"))

CB_WARNDEF (cb_warn_implicit_define, "implicit-define",
	    _("warn implicitly defined data items"))

CB_WARNDEF (cb_warn_corresponding, "corresponding",
	    _("warn CORRESPONDING with no matching items"))

CB_WARNDEF (cb_warn_ignored_initial_val, "initial-value",
	    _("warn Initial VALUE clause ignored"))

CB_WARNDEF (cb_warn_prototypes, "prototypes",
	    _("warn missing FUNCTION prototypes/definitions"))

CB_WARNDEF (cb_warn_arithmetic_osvs, "arithmetic-osvs",
	    _("warn if arithmetic expression precision has changed"))

CB_NOWARNDEF (cb_warn_call_params, "call-params",
	    _("warn non 01/77 items for CALL params"))

CB_WARNDEF (cb_warn_constant_expr, "constant-expression",
	    _("warn expressions that always resolve to true/false"))

CB_NOWARNDEF (cb_warn_column_overflow, "column-overflow",
	    _("warn text after program-text area, FIXED format"))

CB_NOWARNDEF (cb_warn_terminator, "terminator",
	    _("warn lack of scope terminator END-XXX"))

CB_NOWARNDEF (cb_warn_linkage, "linkage",
	    _("warn dangling LINKAGE items"))

CB_NOWARNDEF (cb_warn_unreachable, "unreachable",
	    _("warn unreachable statements"))
